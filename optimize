#!/bin/bash
#
# Simple wrapper for optimize_trees
# Usage: optimize N [options]
#
# This script ensures the Python environment is set up correctly
# and runs the optimizer with the provided arguments.

# Get the directory where this script is located
SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

# Check if we're in a virtual environment, if not suggest creating one
if [[ -z "$VIRTUAL_ENV" ]]; then
    echo "Note: Not running in a virtual environment."
    echo "Consider creating one with: python3 -m venv venv && source venv/bin/activate"
    echo ""
fi

# Run the Python script with all arguments passed through
exec python3 "$SCRIPT_DIR/optimize_trees" "$@"